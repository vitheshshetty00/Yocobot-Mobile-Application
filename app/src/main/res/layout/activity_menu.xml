<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOCOBOT"
            android:textColor="#E8B00C"
            android:textSize="28dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_bg"
            android:paddingHorizontal="25dp"

            android:text="Sign out"
            android:textColor="@color/black" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:orientation="vertical"
        app:flow_verticalAlign="center"
        app:flow_verticalGap="40dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/btnChatCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:backgroundTint="@color/black"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/chat">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="40dp"
                android:text="Chat Bot"
                android:textColor="#E8B00C"
                android:textSize="40dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnImageCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:backgroundTint="@color/black"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"

            app:cardUseCompatPadding="true">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/image">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="Image Generator"
                android:textColor="#E8B00C"
                android:textSize="40dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>